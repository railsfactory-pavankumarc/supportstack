<article class="container" style="margin-top:-18px;">
	<section class="well well-small mePadd">
		<h2 class="meFont" style="padding-bottom:30px;"><span class="icon-comment meMarg"></span> Tickets</h2><div class="myTable">
        	<% @tickets.each do |f| %>
              				 
            	<% if f.status.name == "pending" %>
            		<% @class = "badge badge-inverse" %>
               	<% elsif f.status.name == "await_reply" %> 
                   	<% @class = "badge badge-info"%>
    			<%else%>
      				<%@class = "badge badge-success"%>
    			<%end %>

                <div class="resTable2" style="margin-top:-32px;">
                  <table class="table table-striped table-condensed" style="border:none;">
				                  <tbody><tr class="tableFont">
			                        <td>ID</td>
			                        <td>Status</td>
			                        <td>Subject</td>
			                        <td>Department</td>
			                        <td>Priority</td>
			                        <td>Created_at</td>
			                      </tr>

			                        <tr class="tableFont2"> 
			                        	<td><%=f.id%></td>
				                        <td>
				                        	<center><div class="<%=@class %>" style="width:50px;"><%=f.status.name%></div></center>
				                        </td>
				                        <td><%=f.subject%></td>
				                        <td><%=f.department.name%></td>
				                        <td><%=f.priority.name%></td>
				                        <td><%=f.created_at.strftime(" %d/%m/%Y, %H:%M") %> </td>
				                      </tr>
				                    </tbody></table>
				                </div>
				                <div class="paddingRL resTable2 mePadB">
				                
				                 <div class="pull-right paddingTop">
				                 <a href="">
				                 	<button class="btn btn-info btnDetails" type="button"> View</button></a>
				                 
				              	</div>
				              	</div>
	                   		 </div>
	                   		 <%end%>
	                   		 </div>
				                
			                    
	                   		 
				                <div class="pagination pagination-centered"></div></section>
</article>




</body></html>