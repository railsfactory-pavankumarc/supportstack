<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"><head>
<meta http-equiv="content-type" content="text/html; charset=windows-1252">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<meta name="robots" content="noindex">
<meta name="googlebot" content="noindex">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<head>
<title>SupportStack</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<script type="text/javascript" src="home-page_files/ievfallback.js"></script>
</head>
<body class="<%= controller.controller_name %>">
    <div class="navbar navbar-inverse" style="position: static;">
        <div class="navbar-inner">
                <div class="container">
                	<a class="btn btn-navbar" data-toggle="collapse" data-target=".subnav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </a>
                  
                  <% if (user_signed_in?) and (current_user.role.name == "staff") %>
                  <a class="brand" href="/staff">SupportStack</a>
                  <% elsif (user_signed_in?) and (current_user.role.name == "client") %>
                  <a class="brand" href="/client">SupportStack</a>
                  <% else %>
                  <a class="brand" href="/">SupportStack</a>
                  <% end %>

                  <div class="nav-collapse subnav-collapse">
                  
                  <% if user_signed_in? %>
                  <ul class="nav">
                      <li class="divider-vertical"></li>
                      <a class="brand" href="/users/edit" >My Profile</a>
                      <div class="nav-collapse subnav-collapse">
                    </ul>

                  <% else %>

                   <ul class="nav">
                      <li class="divider-vertical"></li>
                      <a class="brand" href="/users/sign_up" >New user</a>
                      <div class="nav-collapse subnav-collapse">
                    </ul>
                  <% end %>

                    <div class="pull-right">
                     
                    <% if user_signed_in? %>
                    <span style="background: #C8C8C8"> 
                      <%= link_to "Home", '/' %> 
                    </span>&nbsp;
                    <span style="background: #C8C8C8"> 
                      <%= link_to "Create ticket", '/tickets/new' %> &nbsp;
                    </span>&nbsp;
                    <span style="background: #C8C8C8"> 
                      <%= link_to "News" %> &nbsp;
                    </span>&nbsp;
                    <span style="background: #C8C8C8"> 
                      <%= link_to "Contact us" %> &nbsp;
                    </span>&nbsp;
                    <span style="background: #C8C8C8"> 
                      <%= link_to "Logout", destroy_user_session_path, method: :delete %> &nbsp;
                    </span>&nbsp;


                   <% else %>
                      
                     <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "navbar-search"}) do |f| %>

                      <%= f.email_field :email, placeholder: "Email", class: "span3 input-block-level search-query" %>

                       <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "span3 input-block-level search-query" %>

                      <button class="btn btn-success btn-large" style="margin-top:-1px;" type="submit" name="login">login</button>
                      <% end %>
                      <% end %>
                    </div>
                  </div><!-- /.nav-collapse -->
                </div>
              </div><!-- /navbar-inner -->
            </div><!-- /navbar -->
            


<%= yield %>
        <hr style="margin-top:0px;">
		<footer class="pager" style="bottom:0px;">
		        <p> Support by SupportStack team</p>
		</footer>
</body>
</html>

