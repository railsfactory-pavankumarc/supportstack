<h1>Listing tickets</h1>

<table>
  <thead>
    <tr>
      <th>subject</th>
      <th>message</th>
      <th>department</th>
      <th>priority</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.subject %></td>
        <td><%= ticket.message %></td>
        <td><%= ticket.department_id %></td>
        <td><%= ticket.priority_id %></td>
        <td><%= ticket.status_id %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>