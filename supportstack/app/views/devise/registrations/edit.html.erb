<section class="well well-small mePadd">
                <h2 class="meFont" style="padding-bottom:30px;"><span class="icon-comment meMarg"></span> Edit profile</h2>
                    <div class="">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: {class: "form-actions form-horizontal"}) do |f| %>

<%= devise_error_messages! %>

<% if (user_signed_in?) and (current_user.role.name == "staff") %>

<div class="control-group">
<label class="control-label" for="">First Name:</label>
<div class="controls">
  <%= f.text_field :first_name, autofocus: true, class: "input-block-level", value: current_user.first_name %>
</div>
</div>
  


<div class="control-group">
<label class="control-label" for="">Last Name:</label>
<div class="controls">
  <%= f.text_field :last_name, class: "input-block-level", value: current_user.last_name %>
</div>
</div>


 <div class="control-group">
<label class="control-label" for="">Mobile number:</label>
<div class="controls">
  <%= f.text_field :mobile_no, class: "input-block-level", value: current_user.mobile_no %>
</div>
</div>

 <div class="control-group">
<label class="control-label" for="">Fax:</label>
<div class="controls"> 
  <%= f.text_field :fax, class: "input-block-level", value: current_user.fax %>  
</div>
</div>

 <div class="control-group">
<label class="control-label" for="">Current Password:</label>
<div class="controls">
<%= f.password_field :current_password, autocomplete: "off" %>
</div>
</div>

<div class="control-group pull-right">
<div class="controls">
<button type="submit" class="btn" name="editUser">Update</button>
</div>
</div>

<% else %>

<div class="control-group">
<label class="control-label" for="">First Name:</label>
<div class="controls">
  <%= f.text_field :first_name, autofocus: true, class: "input-block-level", value: current_user.first_name %>
</div>
</div>

<div class="control-group">
<label class="control-label" for="">Last Name:</label>
<div class="controls">
  <%= f.text_field :last_name, class: "input-block-level", value: current_user.last_name %>
</div>
</div>

<div class="control-group">
<label class="control-label" for="">Company Name:</label>
<div class="controls">
  <%= f.text_field :company_name, class: "input-block-level", value: current_user.company_name %>
</div>
</div>

 <div class="control-group">
<label class="control-label" for="">Mobile number:</label>
<div class="controls">
  <%= f.text_field :mobile_no, class: "input-block-level", value: current_user.mobile_no %>
</div>
</div>

 <div class="control-group">
<label class="control-label" for="">Fax:</label>
<div class="controls"> 
  <%= f.text_field :fax, class: "input-block-level", value: current_user.fax %>  
</div>
</div>

 <div class="control-group">
<label class="control-label" for="">Current Password:</label>
<div class="controls">
<%= f.password_field :current_password, autocomplete: "off" %>
</div>
</div>

<div class="control-group pull-right">
<div class="controls">
<button type="submit" class="btn" name="editUser">Update</button>
</div>
</div>
<% end %>




<% end %>
</div>
</section><!--Edit user profile Ends-->







